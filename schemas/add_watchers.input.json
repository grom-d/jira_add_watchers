{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "jira_add_watchers.input",
  "type": "object",
  "required": ["issueKey", "accountIds"],
  "properties": {
    "issueKey": { "type": "string", "pattern": "^[A-Z][A-Z0-9_]+-\\d+$" },
    "accountIds": {
      "type": "array",
      "minItems": 1,
      "maxItems": 20,
      "items": { "type": "string", "minLength": 1 }
    },
    "cloudId": { "type": "string" }
  }
}
