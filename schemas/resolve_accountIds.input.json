{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "jira_resolve_accountIds.input",
  "type": "object",
  "required": ["query"],
  "properties": {
    "query": { "type": "string", "minLength": 1 },
    "issueKey": { "type": "string" },
    "projectKey": { "type": "string" },
    "mode": { "enum": ["fuzzy", "exact"], "default": "fuzzy" },
    "disambiguation": { "enum": ["ask", "auto"], "default": "auto" },
    "limit": { "type": "integer", "minimum": 1, "maximum": 20, "default": 10 },
    "cloudId": { "type": "string" }
  }
}
